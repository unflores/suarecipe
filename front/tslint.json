{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [false],
    "object-literal-sort-keys": false,
    "interface-name": [true, "never-prefix"],
    "member-access": [true, "no-public"],
    "jsx-no-multiline-js": false,
    "//": "problems can arise: https://github.com/wmonk/create-react-app-typescript/issues/370",
    "jsx-no-lambda": false,
    "trailing-comma": [true, {
      "singleline": {
        "functions": "never",
        "arrays": "always"
      },
      "multiline": {
        "functions": "never",
        "arrays": "always"
      }
    }]
  }
}
