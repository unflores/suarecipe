{
  "extends": ["tslint:recommended", "tslint-config-airbnb"],
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [false],
    "object-literal-sort-keys": false,
    "import-name": false,
    "prefer-array-literal": [true, { "allow-type-parameters": true }],
    "trailing-comma": [true, {
      "singleline": {
        "functions": "never",
        "arrays": "always"
      },
      "multiline": {
        "functions": "never",
        "arrays": "always"
      }
    }]
  }
}
