{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist/",
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "pretty": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "alwaysStrict": true,
    "paths": {
      "mongoose": ["./typings/mongoose/"]
    }
  },
  "include": ["./index.ts", "./src/**/*"],
  "exclude": ["node_modules", "dist", "./src/**/__test__/**/*"]
}
